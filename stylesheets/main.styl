@import "normalize";
@import "grid";

// font variables
$base-font-family = "futura-pt";
$base-font-size = 16px;

// color variables
$black =  #555555;

body {
  font-family: $base-font-family, sans-serif;
  font-size: $base-font-size / 1.5;
  font-weight: normal;
  color: $black;
  background: #fff;
}

.site-header {
  text-transform: lowercase;
  font-size: 40px;

  h1 {
    font-weight: lighter;
    margin: 0 0 10px;
  }
}

.left-column {
  column(6);
}

.right-column {
  column(6);
}

// map
#map {
  width: 100%;
  height: 400px;
}